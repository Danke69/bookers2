
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
      <th><%= image_tag user.get_profile_image(100,100) %></th>
        <tbody>
            <tr>
              <th><p>name</p></th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th><p>introduction</p></th>
              <th><%= user.introduction.presence %></th>
            </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block edit_user_158517",method: :get do %>
           <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model: @book, url: books_path, method: :post do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
      </div>
      <%= f.text_field :title %>
      <div class="form-group">
        <label for="book_opinion">Option</label>
      </div>
        <%= f.text_area :body %>
      　<%= form_for @book, url: books_path, method: :get do |f| %>
  　　　　　　<%= f.submit 'Create Book' %>
　　　　<% end %>
      <% end %>
    </div>

